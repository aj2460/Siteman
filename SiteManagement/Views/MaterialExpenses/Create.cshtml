@model SiteManagement.Models.MaterialExpense

@{
    ViewData["Title"] = "Create";
}


<h5>Add Material Expense</h5>
<hr />
<div class="row">
    <div class="row" style="margin:0 ; padding:0">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success col-md-12" role="alert" style="margin:0 ; padding:0"><H6>@TempData["Success"] </H6></div>
        }

    </div>


    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="SiteId" class="control-label SiteId">Site</label>
                        <select asp-for="SiteId" class="form-control" asp-items="ViewBag.SiteId"></select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="LabourId" class="control-label">Labour</label>
                        <select asp-for="LabourId" class="form-control" asp-items="ViewBag.LabourId"></select>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Date" class="control-label"></label>
                        <input asp-for="Date" class="form-control"  value=@DateTime.Now.ToString("yyy-MM-dd")  />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="InvoiceNo" class="control-label"></label>
                        <input asp-for="InvoiceNo" class="form-control" />
                        <span asp-validation-for="InvoiceNo" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="row">

                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Supplier" class="control-label"></label>
                        <input asp-for="Supplier" class="form-control" />
                        <span asp-validation-for="Supplier" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Amount" class="control-label"></label>
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group ">

                    <input type="submit" value="Create" class="btn btn-primary " />
                </div>

            </div>






        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



@{
    var Model2 = @ViewBag.mm;

    if(Model2 != null){ 
    <div class="row mt-5">

        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Labour</th>
                    <th>Site</th>
                    <th>Supplier</th>
                    <th>Invoice</th>
                    <th>Amount</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model2)
                {
                    <tr>
                        <td>@Convert.ToDateTime(item.Date).ToString("dd/MM/yyyy")</td>
                        <td>@item.Labour.Name</td>
                        <td width="20%">@item.Site.Name</td>
                        <td width="30%">@item.Supplier</td>
                        <td>@item.InvoiceNo</td>
                        <td>@item.Amount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    }
}

















@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('.SiteId').focus();


        });

    </script>
}
